# Start page for crawling (required)
BASE_URL=https://example.ddev.site

# Max pages to crawl (total)
MAX_PAGES=50000

# Max same-origin links to enqueue per page (increase for sitemap/index pages)
MAX_LINKS_PER_PAGE=50000

# Max crawl depth (0 = only base page, 1 = base page + links from it, etc.)
MAX_DEPTH=10

# Number of concurrent browser tabs
CONCURRENCY=5

# Max retries per page before marking as failed
MAX_RETRIES=2

# Delay between requests per worker (ms)
DELAY=1000

# Set to false to show the browser window
HEADLESS=true

# Set to true to suppress per-page log output
QUIET=false

# Set to true to skip confirmation prompt (for automated usage)
SKIP_CONFIRMATION=false

# Regex pattern for URLs to exclude from crawling (case-insensitive)
# EXCLUDE_PATTERN=calendarize/default/make-ics

# Output files are written to the `reports/` directory with timestamped filenames.
